<theme>
   <formatVersion>4</formatVersion>
   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <pos>1 1</pos>
      </helpsystem>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <tile>true</tile>
         <path>./_inc/images/background.png</path>
         <zIndex>1</zIndex>
      </image>
   </view>
   <view name="system">
      <image name="controller" extra="true">
        <origin>0.5 0</origin>
        <pos>0.5 0.05</pos>
        <maxSize>0.5 0.5</maxSize>
         <zIndex>5</zIndex>
      </image>
      <carousel name="systemcarousel">
         <type>horizontal</type>
         <pos>0 0.6</pos>
         <size>1 0.2</size>
         <color>00000000</color>
         <logoSize>0.5625 0.2</logoSize>
         <logoScale>1</logoScale>
         <maxLogoCount>1</maxLogoCount>
         <zIndex>5</zIndex>
      </carousel>
      <text name="systemInfo">
         <backgroundColor>00000000</backgroundColor>
         <pos>0 0.84</pos>
         <color>555555</color>
         <fontPath>./_inc/fonts/Cabin-Bold-TTF.ttf</fontPath>
         <fontSize>0.05</fontSize>
         <zIndex>5</zIndex>
      </text>
   </view>
   <view name="basic,detailed,video">
      <image name="logo">
         <origin>.5 0</origin>
         <pos>0.5 0.02</pos>
         <maxSize>0.8 0.15</maxSize>
      </image>
      <textlist name="gamelist">
         <pos>0.04 0.18</pos>
         <size>1.0 0.8</size>
         <selectorColor>00000000</selectorColor>
         <selectedColor>FFDB00</selectedColor>
         <primaryColor>5B5B5B</primaryColor>
         <secondaryColor>5B5B5B</secondaryColor>
         <fontPath>./_inc/fonts/Cabin-Bold-TTF.ttf</fontPath>
         <fontSize>0.044</fontSize>
         <scrollSound>./_inc/sounds/select.wav</scrollSound>
         <forceUppercase>1</forceUppercase>
         <alignment>center</alignment>
      </textlist>
   </view>
   <view name="detailed,video">
      <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
         <pos>1 1</pos>
      </text>
      <datetime name="md_releasedate,md_lastplayed">
         <pos>1 1</pos>
      </datetime>
      <rating name="md_rating">
         <pos>1 1</pos>
      </rating>
      <image name="logo">
         <origin>0 0</origin>
         <pos>0.02 0.02</pos>
         <zIndex>40</zIndex>
      </image>
      <image name="md_image">
         <origin>0 0</origin>
         <pos>1 0</pos>
         <maxSize>0.4 0.4</maxSize>
         <zIndex>99</zIndex>
      </image>
      <image name="media_background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>0 0</size>
         <path>./_inc/images/border.png</path>
         <color>000000ff</color>
         <zIndex>5</zIndex>
      </image>
      <image name="border" extra="true">
         <origin>0 0</origin>
         <pos>0.65625 0</pos>
         <size>0 0</size>
         <path>BBA358</path>
         <color>000000ff</color>
         <zIndex>30</zIndex>
      </image>
      <image name="gamelist_background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>0 1</size>
         <tile>true</tile>
         <path>./_inc/images/background.png</path>
         <zIndex>30</zIndex>
      </image>
      <textlist name="gamelist">
         <pos>-0.03 0.175</pos>
         <size>0.9 0.42</size>
         <alignment>left</alignment>
         <horizontalMargin>0.038</horizontalMargin>
         <zIndex>40</zIndex>
      </textlist>
   </view>
   <view name="video">
	  <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <tile>true</tile>
         <path>./_inc/images/background.png</path>
         <zIndex>9</zIndex>
      </image>
      <image name="md_marquee">
         <origin>0 0</origin>
         <pos>1 1</pos>
      </image>
      <image name="md_image">
          <pos>0.14 0.8</pos>
          <origin>0.5 0.5</origin>
      </image>
      <video name="md_video">
         <origin>1 1</origin>
         <pos>1 1</pos>
         <maxSize>1 1</maxSize>
         <delay>0.5</delay>
         <showSnapshotNoVideo>false</showSnapshotNoVideo>
         <zIndex>10</zIndex>
      </video>
   </view>
</theme>
